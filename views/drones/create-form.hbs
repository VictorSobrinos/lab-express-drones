<h2>Create a new drone</h2>
<div class="row">
    <form class="col-md-6" method="POST" action="/drones/create">
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" name="name">
        </div>
        <div class="mb-3">
            <label for="propellers" class="form-label">propellers</label>
            <input type="text" class="form-control" id="propellers" name="propellers">
        </div>
        <div class="mb-3">
            <label for="maxSpeed" class="form-label">maxSpeed</label>
            <input type="text" class="form-control" id="maxSpeed" name="maxSpeed">
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>